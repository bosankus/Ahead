<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/layout_error_img"
               motion:framePosition="86"
               android:alpha="0.9" />
           <KeyAttribute
               motion:motionTarget="@+id/layout_error_txt"
               motion:framePosition="85"
               android:alpha="0" />
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/padding_90dp"
            android:layout_height="@dimen/padding_90dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/layout_error_img"
            motion:layout_constraintVertical_bias="0.60999996"
            android:alpha="0" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/layout_error_img"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/layout_error_txt"
            android:layout_marginTop="32dp"
            android:alpha="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/layout_error_img"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/layout_error_txt"
            android:layout_marginTop="8dp"
            android:alpha="1" />
        <Constraint
            android:id="@+id/layout_error_img"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/padding_90dp"
            android:layout_height="@dimen/padding_90dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="1" />
    </ConstraintSet>
</MotionScene>