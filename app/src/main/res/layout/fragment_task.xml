<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="tech.androidplay.sonali.todo.data.viewmodel.TaskViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/taskFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTaskListContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/layoutTaskBar"
                layout="@layout/layout_task_app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_26dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/layoutNoTask"
                layout="@layout/layout_task_empty"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutTaskBar"
                app:listSize="@{viewmodel.incompleteTaskListSize}" />

            <include
                android:id="@+id/layoutTodayTask"
                layout="@layout/layout_task_today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutTaskBar"
                app:listSize="@{viewmodel.todayTaskList.size()}" />

            <include
                android:id="@+id/layoutOverdueTask"
                layout="@layout/layout_task_overdue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutTodayTask"
                app:listSize="@{viewmodel.overdueTaskList.size()}" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/efabAddTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="20sp"
            android:backgroundTint="@color/dribblePink"
            android:fontFamily="@font/jost_bold"
            android:minHeight="1dp"
            android:text="@string/add_task"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:icon="@android:drawable/ic_input_add"
            app:iconPadding="0sp"
            app:iconTint="@color/white"
            app:rippleColor="@color/white" />

        <include
            android:id="@+id/layoutLoadingTask"
            layout="@layout/layout_task_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:loadingState="@{viewmodel.loadingState}" /> 

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>