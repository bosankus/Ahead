<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="tech.androidplay.sonali.todo.viewmodel.TaskViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/taskFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".view.activity.MainActivity">

        <include
            android:id="@+id/layoutTaskBar"
            layout="@layout/layout_task_app_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:fname="@{viewmodel.firstName}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/layoutTask"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutTaskBar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clTaskListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/layoutAssignedTask"
                    layout="@layout/layout_task_assigned"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:listSize="@{viewmodel.assignedTaskList.size()}" />

                <include
                    android:id="@+id/layoutUpcomingTask"
                    layout="@layout/layout_task_upcoming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layoutAssignedTask"
                    app:listSize="@{viewmodel.upcomingTaskList.size()}" />

                <include
                    android:id="@+id/layoutOverdueTask"
                    layout="@layout/layout_task_overdue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layoutUpcomingTask"
                    app:listSize="@{viewmodel.overdueTaskList.size()}" />

                <include
                    android:id="@+id/layoutNoTask"
                    layout="@layout/layout_task_empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:listSize="@{viewmodel.taskListSize}"
                    app:viewModel="@{viewmodel}" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <include
            android:id="@+id/layoutLoadingTask"
            layout="@layout/layout_task_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loadingState="@{viewmodel.loadingState}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>