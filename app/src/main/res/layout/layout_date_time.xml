<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvSelectDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:drawablePadding="5dp"
        android:fontFamily="@font/calibre_semi"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text="@string/hint_date_txt"
        android:textColor="@color/dribblePink"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_date"
        app:drawableTint="@color/dribblePink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSelectTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="?attr/selectableItemBackground"
        android:drawablePadding="5dp"
        android:fontFamily="@font/calibre_semi"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text="@string/hint_time_txt"
        android:textColor="@color/dribblePink"
        android:textSize="15sp"
        app:drawableStartCompat="@drawable/ic_time"
        app:drawableTint="@color/dribblePink"
        app:layout_constraintStart_toEndOf="@+id/tvSelectDate"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>