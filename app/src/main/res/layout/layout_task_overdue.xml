<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listSize"
            type="int" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clOverdueList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:show="@{(listSize>0) ? true: false}">

        <TextView
            android:id="@+id/tvOverdueTaskListHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/padding_18dp"
            android:layout_marginTop="@dimen/padding_16dp"
            android:drawablePadding="3dp"
            android:fontFamily="@font/calibre_semi"
            android:text="@string/overdue"
            android:textColor="@color/dribblePink"
            android:textSize="@dimen/text_14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/overdueHeaderView"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginStart="@dimen/padding_18dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:background="@drawable/bg_tab_indicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvOverdueTaskListHeader" />

        <TextView
            android:id="@+id/tvOverdueAddTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/padding_16dp"
            android:layout_marginEnd="@dimen/padding_18dp"
            android:drawablePadding="3dp"
            android:visibility="gone"
            android:fontFamily="@font/calibre_semi"
            android:text="@string/add_task"
            android:textColor="@color/dribblePink"
            android:textSize="@dimen/text_18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvOverdueTaskList"
            style="@style/scrollbar_shape_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_18dp"
            android:layout_marginEnd="@dimen/padding_18dp"
            android:background="@android:color/transparent"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="true"
            android:orientation="vertical"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/overdueHeaderView"
            tools:itemCount="2"
            tools:listitem="@layout/layout_main_task_list" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>