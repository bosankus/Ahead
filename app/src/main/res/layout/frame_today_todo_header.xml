<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_today_todo_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTodayHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:fontFamily="@font/jost_semi"
        android:text="Today"
        android:textColor="@color/dribblePink" />

    <TextView
        android:id="@+id/tvTodayDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/jost"
        android:text="fri 4 jan"
        android:textColor="@color/grey2" />

    <TextView
        android:id="@+id/tvTodayCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:fontFamily="@font/jost"
        android:text="2 of 3 done"
        android:textColor="@color/grey2" />

</FrameLayout>