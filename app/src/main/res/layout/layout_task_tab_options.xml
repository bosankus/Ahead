<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="listSize"
            type="int" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:show="@{(listSize>0) ? true : false}">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/taskTabOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_8dp"
            android:paddingEnd="@dimen/padding_8dp"
            app:tabTextColor="@color/grey2"
            app:tabSelectedTextColor="@color/grey3"
            app:tabIndicator="@drawable/bg_tab_indicator"
            android:background="@android:color/transparent"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="3dp"
            app:tabMode="scrollable" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/taskTabViewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:elevation="3dp"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@+id/taskTabOptions" />

    </LinearLayout>

</layout>