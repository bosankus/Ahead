<resources>
    <!-- I call it mah style! -->
    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/dribblePink</item>
        <item name="colorPrimaryDark">@color/dribblePink</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorAccent">@color/dribblePink</item>
        <item name="textAllCaps">false</item>
        <item name="radioButtonStyle">@style/Widget.MaterialComponents.CompoundButton.RadioButton
        </item>
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>
        <item name="colorControlActivated">@color/dribblePink</item>
        <item name="colorSwitchThumbNormal">@color/grey1</item>
        <item name="android:colorForeground">@color/grey1</item>
        <item name="android:textColorPrimary">@color/grey3</item>
        <item name="android:textColorSecondary">@color/grey2</item>
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="fontFamily">@font/calibre_semi</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="scrollbar_shape_style">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/ic_scroll_thumb</item>
        <item name="android:scrollbarSize">3dp</item>
        <item name="android:scrollbarFadeDuration">2000</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">1000</item>
    </style>

    <style name="AuthStyle" parent="FirebaseUI">
        <item name="colorPrimary">@color/dribblePink</item>
        <item name="colorPrimaryDark">@color/dribblePink</item>
        <item name="colorAccent">@color/dribblePink</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@color/grey2</item>
        <item name="colorControlActivated">@color/grey3</item>
        <item name="colorControlHighlight">@color/grey3</item>
        <item name="android:textColor">@color/grey3</item>
        <item name="android:textColorPrimary">@color/grey3</item>
        <item name="android:textColorSecondary">@color/grey2</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/calibre_semi</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textColorHint">@color/grey2</item>
    </style>

    <style name="ButtonStyle" parent="android:style/Widget.Button">
        <item name="android:elevation">@dimen/padding_5dp</item>
        <item name="android:translationZ">@dimen/padding_5dp</item>
        <item name="android:ambientShadowAlpha">1</item>
        <item name="android:spotShadowAlpha">1</item>
    </style>

    <style name="CardStyle" parent="Base.CardView">
        <item name="android:elevation">@dimen/padding_3dp</item>
        <item name="android:translationZ">@dimen/padding_3dp</item>
        <item name="android:ambientShadowAlpha">1</item>
        <item name="android:spotShadowAlpha">1</item>
    </style>

    <style name="HeadingTextViewStyle" parent="android:style/Widget.TextView">
        <item name="android:elevation">@dimen/padding_5dp</item>
        <item name="android:translationZ">@dimen/padding_5dp</item>
        <item name="android:ambientShadowAlpha">1</item>
        <item name="android:spotShadowAlpha">1</item>
        <item name="android:paddingEnd">@dimen/padding_10dp</item>
        <item name="android:paddingStart">@dimen/padding_10dp</item>
        <item name="android:paddingTop">@dimen/padding_5dp</item>
        <item name="android:paddingBottom">@dimen/padding_5dp</item>
        <item name="android:fontFamily">@font/calibre_semi</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_rounded_200dp</item>
        <item name="android:backgroundTint">@color/dribblePink</item>
    </style>

</resources>
